

# To create a table, you will need to name it and create the necessary amount of columns - including their names,
# and their <class> (i.e. integer, text, etc.).

# Use the format below:

CREATE TABLE <table_name> (<column_name> <class> <primary_key?>, <column_name> <class>, <column_name> <class> ... ); 

# *Note* The <primary_key?> classifer is used to designate the column that holds the identification data.

# Ex 1.

CREATE TABLE fav_books (id INTEGER PRIMARY KEY, name TEXT, author TEXT, year INTEGER, copies_owned INTEGER); 

# To populate the table with data, use the format below:

INSERT INTO <table_name> VALUES (<value>, <value>, <value>);

# *Note* The order in which you must enter the values is dictated by the order in which you created the columns.

# Ex 2.

INSERT INTO fav_books VALUES (001, "Capital: Critique of Political Economy", "Karl Marx", 1883, 1);
INSERT INTO fav_books VALUES (002, "The Accumulation of Capital", "Rosa Luxemburg", 1913, 1);
INSERT INTO fav_books VALUES (003, "Imperialism, the Highest Stage of Capitalism", "Vladimir Lenin", 1916, 1);
INSERT INTO fav_books VALUES (004, "Prison Notebooks", "Antonio Gramsci", 1935, 1);
INSERT INTO fav_books VALUES (005, "On Contradiction", "Mao Zedong", 1937, 0);
INSERT INTO fav_books VALUES (006, "Guerrilla Warfare", "Che Guevara", 1961, 1);
INSERT INTO fav_books VALUES (007, "Pedagogia do Oprimido", "Paulo Freire", 1968, 2);
INSERT INTO fav_books VALUES (008, "Minimanual do Guerrilheiro Urbano", "Carlos Marighella", 1969, 1);

